<div class="row">
  <div class="col-sm-4">
    <!-- START Statistic Widget -->
    <div class="table-layout animation delay animating fadeInDown">
      <div class="col-xs-4 panel bgcolor-info">
        <div class="ico-checkmark3 fsize24 text-center"></div>
      </div>
      <div class="col-xs-8 panel">
        <div class="panel-body text-center">
          <h4 class="semibold nm"><%= @total_appeals.count %></h4>
          <p class="semibold text-muted mb0 mt5"><%= t "conferences.total_appeals" %></p>
        </div>
      </div>
    </div>
    <!--/ END Statistic Widget -->
  </div>
  <div class="col-sm-4">
    <!-- START Statistic Widget -->
    <div class="table-layout animation delay animating fadeInUp">
      <div class="col-xs-4 panel bgcolor-teal">
        <div class="ico-hammer2 fsize24 text-center"></div>
      </div>
      <div class="col-xs-8 panel">
        <div class="panel-body text-center">
          <h4 class="semibold nm"><%= link_to @waiting_appeals.count, conference_appeals_path(@conference) %></h4>
          <p class="semibold text-muted mb0 mt5"><%= t "conferences.waiting_appeals" %></p>
        </div>
      </div>
    </div>
    <!--/ END Statistic Widget -->
  </div>
  <div class="col-sm-4">
    <!-- START Statistic Widget -->
    <div class="table-layout animation delay animating fadeInDown">
      <div class="col-xs-4 panel bgcolor-primary">
        <div class="ico-flag6 fsize24 text-center"></div>
      </div>
      <div class="col-xs-8 panel">
        <div class="panel-body text-center">
          <h4 class="semibold nm"><%= remaining_days(@conference) %></h4>
          <p class="semibold text-muted mb0 mt5"><%= t("conferences.days_remaining")%></p>
        </div>
      </div>
    </div>
    <!--/ END Statistic Widget -->
  </div>
</div>