<!DOCTYPE html>
<html>
<head>
  <title>ConfDeck - manage your conferences on cloud</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag 'http://maps.googleapis.com/maps/api/js?sensor=false&libraries=places' %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag controller_name if !["sessions", "registrations"].include? controller_name %>
  <%= stylesheet_link_tag controller_name if !["sessions", "registrations"].include? controller_name %>
  <%= csrf_meta_tags %>
  <%= javascript_tag do %>
    current_locale = "<%= I18n.locale %>"
  <% end %>
</head>
<body>
    <%= render "layouts/header" %>
    <%= render "layouts/sidebar" %>

    <section id="main" role="main">
      <!-- START Template Container -->
      <div class="container-fluid">
            <div class="page-header page-header-block">
              <div class="page-header-section">
                <h4 class="title semibold"><%= yield(:page_title) %></h4>
              </div>
            </div>
            <%= render "layouts/messages" %>
            <%= yield %>
      </div>
    </section>
</body>
</html>
