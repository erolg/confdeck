$("#<%= dom_id(@speech) %>").find(".action-upvote").removeClass("text-grey")
$("#<%= dom_id(@speech) %>").find(".action-upvote").addClass("text-primary")

$("#<%= dom_id(@speech) %>").find(".action-downvote").removeClass("text-primary")
$("#<%= dom_id(@speech) %>").find(".action-downvote").addClass("text-grey")
$("#<%= dom_id(@speech) %>").find(".upvote-count").html("<%= @speech.upvotes.count %>")
$("#<%= dom_id(@speech) %>").find(".downvote-count").html("<%= @speech.downvotes.count %>")
