<!--/ Toolbar -->
<div class="panel-body np comments" <%= "style=display:none" unless open %>>
  <!-- Comment list -->
  <ul class="media-list">
    <% comments.each do |comment| %>
        <%= render "admin/conferences/dashboard/comment", comment: comment %>
    <% end %>
  </ul>
  <!--/ Comment list -->
</div>
<hr class="nm"><!-- horizontal line -->
<!-- Comment box -->
<%= form_for(Comment.new, url: comment_admin_speech_path(speech), remote: true) do |f| %>
    <%= f.text_area :comment, :class => "form-control form-control-minimal speech-comment", placeholder: t("speeches.write_comment"), onkeyup:  "if (event.keyCode == 13) { sendForm(this); }", onkeydown:  "if (event.keyCode == 13) { event.preventDefault(); }" %>
    <div class="panel-footer">
      <div class="panel-toolbar-wrapper">
        <div class="panel-toolbar text-right">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>
<!--/ Comment box -->