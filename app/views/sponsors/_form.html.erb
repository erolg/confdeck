<div class="row">
  <div class="col-lg-12">
    <%= form_for([@conference, @sponsor], :html => {:class => 'panel panel-default form-horizontal form-bordered validate-me'}) do |f| %>
        <div class="panel-body pt0">
          <% if @sponsor.errors.any? %>
              <div class="form-group message-container">
                <div class="alert alert-danger animation animating flipInX">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                  <h4 class="semibold mb5"><%= t("general.error") %></h4>
                  <% @sponsor.errors.full_messages.each do |msg| %>
                      <p class="nm"><%= msg %></p>
                  <% end %>
                </div>
              </div>

          <% end %>
          <div class="form-group">
            <%= f.label :name, :class => "col-lg-3 control-label " %>
            <div class="col-lg-9">
              <%= f.text_field :name, :class => "form-control required" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :website, :class => "col-lg-3 control-label " %>
            <div class="col-lg-9">
              <%= f.text_field :website, :class => "form-control required" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :logo, :class => "control-label col-lg-3" %>
            <div class="col-lg-9">
              <%= f.file_field :logo, :class => "form-control required" %>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          <%= f.submit :class => "btn btn-primary pull-right" %>
        </div>

    <% end %>

  </div>
</div>
