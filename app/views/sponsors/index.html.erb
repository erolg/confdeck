<%
   meta title: t("titles.sponsors.index", conference: @conference.name)
%>

<% content_for :header_actions do %>
    <%= bs_button_to t("sponsors.new"), new_admin_sponsor_path, icon: "plus-circle2", style: "primary"%>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="table-responsive panel-collapse pull out">
        <table class="table table-hover table-bordered">
          <thead>
          <tr>
            <th><%= t("sponsors.logo") %></th>
            <th><%= t("sponsors.name") %></th>
            <th><%= t("sponsors.website") %></th>
            <th>&nbsp;</th>
          </tr>
          </thead>
          <tbody>
              <% @sponsors.each do |sponsor| %>
                  <tr>
                    <td width="5%"><%= image_tag sponsor.logo.url(:small), height: "50", width: "50" %></td>
                    <td>
                      <%= sponsor.name %> <br/>
                    </td>
                    <td><%= link_to sponsor.website, sponsor.website if sponsor.website %></td>
                    <td width="10%" class="text-center">
                      <%= button_group class: "btn-group-sm text-center" do %>
                          <%= bs_button_to "", ["admin", sponsor], tooltip: t("general.details"), icon: "eye-open", style: "primary", size: "mini" %>
                          <%= bs_button_to "", edit_admin_sponsor_path(sponsor), tooltip: t("general.edit"), icon: "pencil", style: "primary", size: "mini" %>
                          <%= bs_button_to "", ["admin", sponsor], method: :delete, data: {:confirm => t("general.are_you_sure")}, tooltip: t("general.delete"), icon: "remove", style: "primary", size: "mini" %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

