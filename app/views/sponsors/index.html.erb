<%
   meta title: t("titles.sponsors.index", conference: @conference.name)
%>

<% content_for :header_actions do %>
    <%= bs_button_to t("sponsors.new"), new_conference_sponsor_path(@conference), icon: "plus-circle2", style: "primary"%>
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel">
      <div class="table-responsive panel-collapse pull out">
        <table class="table table-hover table-bordered">
          <thead>
          <tr>
            <th><%= t("sponsors.logo") %></th>
            <th><%= t("sponsors.name") %></th>
            <th><%= t("sponsors.website") %></th>
            <th>&nbsp;</th>
          </tr>
          </thead>
          <tbody>
              <% @sponsors.each do |sponsor| %>
                  <tr>
                    <td width="5%"><%= image_tag sponsor.logo.url(:small), height: "50", width: "50" %></td>
                    <td>
                      <%= sponsor.name %> <br/>
                    </td>
                    <td><%= link_to sponsor.website, sponsor.website if sponsor.website %></td>
                    <td width="10%" class="text-center">
                      <%= button_group class: "btn-group-sm text-center" do %>
                          <%= bs_button_to "", [@conference, sponsor], tooltip: t("general.details"), icon: "eye-open", style: "primary", size: "mini" %>
                          <%= bs_button_to "", edit_conference_sponsor_path(@conference, sponsor), tooltip: t("general.edit"), icon: "pencil", style: "primary", size: "mini" %>
                          <%= bs_button_to "", [@conference, sponsor], method: :delete, data: {:confirm => t("general.are_you_sure")}, tooltip: t("general.delete"), icon: "remove", style: "primary", size: "mini" %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>



<div class="page-header">
  <h1 class="pull-left">Sponsors of <%= @conference.name %></h1>

  <div class="pull-right toolbar">

    <%= button_group do %>
        <%= bs_button_to "", new_conference_sponsor_path(@conference), tooltip: "New Conference", icon: "plus", style: "primary" %>
    <% end %>
  </div>
  <div class="clearfix"></div>
</div>



<table class="table table-striped ">
  <tr>
    <th class="span1">Logo</th>
    <th>Name</th>
    <th>Website</th>
    <th class="span3"></th>
  </tr>

  <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= image_tag sponsor.logo.url(:small), height: "50", width: "50" %></td>
        <td>
          <%= sponsor.name %> <br/>
        </td>
        <td><%= link_to sponsor.website, sponsor.website if sponsor.website %></td>
        <td>
          <%= button_group class: "btn-group-sm pull-right" do %>
              <%= bs_button_to "", [@conference, sponsor], tooltip: "Details", icon: "eye-open", style: "primary", size: "mini" %>
              <%= bs_button_to "", edit_conference_sponsor_path(@conference, sponsor), tooltip: "Edit", icon: "pencil", style: "primary", size: "mini" %>
              <%= bs_button_to "", [@conference, sponsor], method: :delete, data: {:confirm => "Are You Sure?"}, tooltip: "Delete", icon: "remove", style: "primary", size: "mini" %>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>

<div class="pull-right">
  <%= bs_will_paginate(@sponsors) %>
</div>
