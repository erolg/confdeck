<!-- START Modal -->
<div id="ModalAddSponsor" class="modal fade">
  <div class="modal-dialog">
    <%= form_for([@conference, @sponsor], remote: true, authenticity_token: true, :html => {:class => 'modal-content validate-me'}) do |f| %>
        <div class="modal-header">
          <div class="cell text-center">
            <button type="button" class="close" data-dismiss="modal">Ã—</button>
            <div class="ico-crown mb15 mt15 fsize32"></div>
            <h4 class="semibold text-primary"><%= t("sponsors.new") %></h4>
          </div>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group message-container"></div>
              <div class="form-group">
                <%= f.label :name, :class => "control-label col-lg-3" %>
                <%= f.text_field :name, :class => "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :website, :class => "control-label col-lg-3" %>
                <%= f.text_field :website, :class => "form-control required" %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t("general.cancel") %></button>
          <%= f.submit :class => "btn btn-success pull-right" %>
        </div>
        <% end %><!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!--/ END Modal -->
</div>