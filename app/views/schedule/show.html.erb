<p id="notice"><%= notice %></p>
<%= javascript_tag do %>
    window.schedule_url = '<%= j conference_schedule_url(@conference)%>';
    window.rooms_url = '<%= j conference_rooms_url(@conference)%>';
    window.appeal_types_url = '<%= j appeal_types_conference_url(@conference)%>';
<% end %>

<div class="row">
  <div class="col-lg-9">
    <div id="scheduler"></div>
  </div>
  <div class="col-lg-3">
    <button type="button" class="btn btn-primary btn-block create-room-button" ><%= t :create_room %></button>
    <% @appeal_types.each do |appeal_type| %>
        <%= appeal_type.type_name %>
        <table class="table table-bordered">
          <thead>
              <tr>
                <th><%= t :subject %></th>
                <th><%= t :speakers %></th>
              </tr>
          </thead>
          <tbody>
            <% appeal_type.appeals.each do |appeal|%>
                <tr class="draggable"
                    data-subject="<%= appeal.topic.subject %>"
                >
                   <td><%= appeal.topic.subject %></td>
                   <td><%= appeal.topic.subject %></td>
                </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>

<div class="create-room-window">
  <%= form_for([@conference, @room], remote: true, html: {class: "form-horizontal"}) do |f| %>
    <%= f.hidden_field :conference_id, value: @conference.id %>
    <div class="form-group">
        <%= f.label :name, t("room.name"), class: "col-lg-2 control-label" %>
        <div class="col-lg-7">
          <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
        <%= f.submit t(:create), :class => "btn btn-primary pull-right" %>
  <% end %>
</div>
