  <% appeal_types.each do |appeal_type| %>
      <div class="panel panel-default appeal-type" data-type_id="<%= appeal_type.id %>">
        <div class="panel-heading">
          <h3 class="panel-title"><%= appeal_type.type_name %> </h3>
        </div>
        <div class="panel-body">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th><%= t :subject %></th>
              <th><%= t :speakers %></th>
            </tr>
            </thead>
            <tbody>
            <% appeal_type.appeals.each do |appeal| %>
                <tr class="draggable"
                    data-subject="<%= appeal.topic.subject %>"
                    data-appeal_id="<%= appeal.id %>" <%= "style=display:none" if appeal.slot.present? %>
                >
                  <td><%= appeal.topic.subject %></td>
                  <td><%= appeal.topic.subject %></td>
                </tr>

            <% end %>
            </tbody>
          </table>
        </div>
      </div>
  <% end %>